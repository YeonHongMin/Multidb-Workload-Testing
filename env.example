# Multi-Database Load Tester 환경 변수 예시
# 실제 사용 시 이 파일을 복사하여 .env로 저장하고 실제 값으로 수정

# ============================================================================
# Oracle 설정 예시
# ============================================================================
ORACLE_DSN=(DESCRIPTION=(ADDRESS=(PROTOCOL=TCP)(HOST=your-oracle-host)(PORT=1521))(CONNECT_DATA=(SERVICE_NAME=ORCL)))
ORACLE_USER=test_user
ORACLE_PASSWORD=your_password

# ============================================================================
# PostgreSQL 설정 예시
# ============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=testdb
POSTGRES_USER=test_user
POSTGRES_PASSWORD=your_password

# ============================================================================
# MySQL 설정 예시
# ============================================================================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=testdb
MYSQL_USER=test_user
MYSQL_PASSWORD=your_password

# ============================================================================
# 공통 부하 테스트 설정
# ============================================================================
MIN_POOL_SIZE=100
MAX_POOL_SIZE=200
POOL_INCREMENT=10
THREAD_COUNT=200
TEST_DURATION=300
LOG_LEVEL=INFO
